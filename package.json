{
    "name": "my-devshop",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^5",
        "express": "^4",
        "hdb": "^0.19.0",
        "@sap/xssec": "^3",
        "passport": "^0"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.102.16",
        "sqlite3": "^5.0.2"
    },
    "scripts": {
        "start": "cds run",
        "watch-project1": "cds watch --open project1/webapp/index.html#fe-lrop-v4",
        "undeploy": "cf undeploy my-devshop --delete-services --delete-service-keys"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "[production]": {
                "db": {
                    "kind": "hana-cloud"
                },
                "auth": {
                    "kind": "xsuaa"
                },
                "approuter": {
                    "kind": "cloudfoundry"
                }
            },
            "db": {
                "kind": "sql"
            }
        }
    },
    "sapux": [
        "app/project1"
    ]
}